<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane id="AnchorPane" prefHeight="680.0" prefWidth="980.0" styleClass="parent"
            stylesheets="@/stylesheets/styles.css" xmlns="http://javafx.com/javafx/19"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="ba.unsa.etf.rpr.controllers.MainController">
    <Pane layoutX="2.0" layoutY="140.0" prefHeight="400.0" prefWidth="980.0" styleClass="pane">
        <Button id="closeButton" fx:id="closeButton" minWidth="39.0" mnemonicParsing="false"
                onAction="#closeButtonAction" onMouseEntered="#closeButtonMouseEntered"
                onMouseExited="#closeButtonMouseExited" prefHeight="30.0" prefWidth="39.0"
                stylesheets="@/stylesheets/styles.css" text="X">
            <font>
                <Font name="Yu Gothic Bold" size="15.0"/>
            </font>
            <styleClass>
                <String fx:value="closeButtonStyle"/>
                <String fx:value="closeButtonWhenHovered"/>
            </styleClass>
        </Button>
        <Button id="minimizeButton" fx:id="minimizeButton" alignment="CENTER" ellipsisString="" layoutX="34.0"
                minWidth="39.0" mnemonicParsing="false" nodeOrientation="LEFT_TO_RIGHT" prefHeight="30.0"
                prefWidth="39.0" styleClass="minimizeButtonStyle" stylesheets="@/stylesheets/styles.css" text="_"
                textAlignment="CENTER">
            <font>
                <Font name="Yu Gothic Bold" size="15.0"/>
            </font>
            <opaqueInsets>
                <Insets/>
            </opaqueInsets>
        </Button>
        <Label layoutX="21.0" layoutY="98.0" text="Don't have an account?" textFill="WHITE">
            <font>
                <Font size="20.0"/>
            </font>
        </Label>
        <Label layoutX="21.0" layoutY="134.0" prefHeight="115.0" prefWidth="222.0"
               text="Explore the world with Hana Avis. Find great hotel deals and book in just a few minutes!"
               textFill="WHITE" wrapText="true">
            <font>
                <Font size="15.0"/>
            </font>
        </Label>
        <Button layoutX="21.0" layoutY="250.0" mnemonicParsing="false" onAction="#open_signup" prefHeight="32.0"
                prefWidth="93.0" styleClass="trans-btn-white-border" text="Register"/>
        <Label layoutX="726.0" layoutY="59.0" text="Have an account?" textFill="WHITE">
            <font>
                <Font size="20.0"/>
            </font>
        </Label>
        <Label layoutX="692.0" layoutY="74.0" prefHeight="100.0" prefWidth="222.0"
               text="Welcome back :) We've been waiting for your next adventure." textAlignment="RIGHT"
               textFill="WHITE" wrapText="true">
            <font>
                <Font size="15.0"/>
            </font>
        </Label>
        <Button layoutX="782.0" layoutY="198.0" mnemonicParsing="false" onAction="#open_signin" prefHeight="32.0"
                prefWidth="93.0" styleClass="trans-btn-white-border" text="Log in"/>
        <VBox id="vbox" fx:id="vbox" layoutX="21.0" layoutY="-49.0" prefHeight="480.0" prefWidth="480.0"
              styleClass="white-pane"/>
    </Pane>
</AnchorPane>
